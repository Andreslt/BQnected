<h1>Listing comentarios</h1>

<table>
  <tr>
    <th>Comentario</th>
    <th>Evento</th>
    <th>Asistencia</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comentarios.each do |comentario| %>
  <tr>
    <td><%= comentario.comentario %></td>
    <td><%= comentario.evento.try(:nombre) %></td>
    <td><%= comentario.asistencia %></td>
    <td><%= link_to 'Show', comentario %></td>
    <td><%= link_to 'Edit', edit_comentario_path(comentario) %></td>
    <td><%= link_to 'Destroy', comentario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Comentario', new_comentario_path, class: 'button [tiny small large]' %>
