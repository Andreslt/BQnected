<h3>Registrate y entérate de lo que está pasando</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :nombre %><br />
  <%= f.text_field :nombre, autofocus: true %></div>
  <% barrios = Barrio.all.map {|barrio| [barrio.nombre, barrio.id]} %>
  <div><%= f.label :barrio_id %><br />
  <%= f.select :barrio_id, options_for_select(barrios) %></div>

  <div><%= f.label :descripcion %><br />
  <%= f.text_area :descripcion %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :Repite_la_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up", class: 'button' %></div>
<% end %>

<%= render "devise/shared/links" %>
